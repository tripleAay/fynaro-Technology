{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* ðŸ”½ IMPORTANT PART ðŸ”½ */
    "baseUrl": ".",             // so paths are resolved from project root
    "paths": {
      "@/*": ["src/*"]          // map "@/..." â†’ "src/..."
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/shop/web-services/page.jsx"],
  "exclude": ["node_modules"]
}
